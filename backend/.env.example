# Backend Environment Variables
# TEMPLATE only â€” do NOT commit production secrets. 
# Copy to .env for local development or to /etc/klassik/klassik.env on server.

# ============================================
# Database Configuration
# ============================================
# Preferred: single DATABASE_URL connection string
DATABASE_URL=postgresql://klassik:password@localhost:5432/klassik

# Alternative: individual DB settings
# DB_USER=klassik
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=klassik

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# CORS (comma-separated origins for production, * for dev)
CORS_ORIGIN=*

# ============================================
# JWT Authentication
# ============================================
# Generate strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# ============================================
# Ethereum/Blockchain Configuration
# ============================================
ETH_RPC_URL=http://127.0.0.1:8545
ESCROW_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
REQUIRED_CONFIRMATIONS=3

# SECURITY WARNING: Never commit real private keys to git!
# Use secure vault (AWS Secrets Manager, HashiCorp Vault) in production
HOT_WALLET_PRIVATE_KEY=your-hot-wallet-private-key-for-swap-execution

# Enable/disable blockchain watcher
ENABLE_WATCHER=true

# ============================================
# Kaspa Configuration
# ============================================
KASPA_RPC_URL=http://localhost:16110
KASPA_HOT_WALLET=kaspa:qz...your_hot_wallet_address

# ============================================
# NOWPayments Integration
# ============================================
# Get API key from: https://nowpayments.io
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_API_URL=https://api.nowpayments.io/v1
NOWPAYMENTS_IPN_SECRET=your-nowpayments-ipn-secret

# ============================================
# External Provider APIs (Optional)
# ============================================
# For DingConnect mobile top-up provider
# DINGCONNECT_API_KEY=your-dingconnect-api-key

# For Reloadly gift card provider
# RELOADLY_CLIENT_ID=your-reloadly-client-id
# RELOADLY_CLIENT_SECRET=your-reloadly-client-secret

# ============================================
# Feature Flags
# ============================================
ENABLE_WALLET_AUTH=true
ENABLE_EMAIL_AUTH=true

# ============================================
# Logging (Optional)
# ============================================
LOG_LEVEL=info

